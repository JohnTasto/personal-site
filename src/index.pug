extends template.pug

block vars
  - let resume = htmlWebpackPlugin.options.resume

mixin sectionHeading(text)
  div.head
    h2= text

mixin bullets(...items)
  ul(id=id)
    each item in items
      li â–  #{item}

block content
  header
    div.head
      h1= resume.header.name
      h3= resume.header.title
    div.body
      span
        i.fa.fa-map-marker &nbsp;
        span= resume.header.location
      span
        i.fa.fa-phone &nbsp;
        span= resume.header.phone
      span
        i.fa.fa-envelope &nbsp;
        span= resume.header.email
      span
        i.fa.fa-linkedin &nbsp;
        span= resume.header.linkedin
      span
        i.fa.fa-github &nbsp;
        span= resume.header.github
  section
    +sectionHeading(resume.summary.label)
    div.body
      +bullets(...resume.summary.bullets)




